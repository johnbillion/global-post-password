{
	"name": "johnbillion/global-post-password",
	"description": "Define a global password for all your password-protected posts and pages.",
	"homepage": "https://github.com/johnbillion/global-post-password/",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "John Blackbourn",
			"homepage": "https://johnblackbourn.com/"
		}
	],
	"support": {
		"issues": "https://github.com/johnbillion/global-post-password/issues",
		"forum": "https://wordpress.org/support/plugin/global-post-password",
		"source": "https://github.com/johnbillion/global-post-password"
	},
	"config": {
		"preferred-install": "dist"
	},
	"require": {
		"php": ">=5.3",
		"composer/installers": "~1.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
		"wp-coding-standards/wpcs": "^2"
	},
	"scripts": {
		"test:cs": [
			"vendor/bin/phpcs -nps --colors --report-code --report-summary --report-width=80 ."
		],
		"test": [
			"@test:cs"
		]
	}
}
